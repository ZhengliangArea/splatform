<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>splatform-sm3-m</display-name>
  
  <!-- 统一错误页面 404 和 500 -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/error-404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/error-500.jsp</location>
  </error-page>
	
  <!-- spring加载配置文件 -->  
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath*:applicationContext-*.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <!-- 定时任务监听器 -->
  <listener>
    <listener-class>com.splatform.manage.listener.TimerTaskListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>springMVC</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    	<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:applicationContext.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springMVC</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <!-- 字符集过滤 -->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- 访问权限过滤控制 -->
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>com.splatform.manage.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- 平台统一按钮标签 -->
  <jsp-config>
    <taglib>
      <taglib-uri>/splatform-btntag</taglib-uri>
      <taglib-location>/WEB-INF/tlds/splatform-btn.tld</taglib-location>
    </taglib>
  </jsp-config>
  
  <!-- 验证码 -->
  <servlet>
    <servlet-name>AuthImageServlet</servlet-name>
    <servlet-class>com.splatform.manage.module.verify.servlet.AuthImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthImageServlet</servlet-name>
    <url-pattern>/authImage</url-pattern>
  </servlet-mapping>
</web-app>